{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": 2,
    "strict": 0,
    "block-spacing": 2,
    "jsx-quotes": 2,
    "no-unused-vars": 1,
    "array-bracket-spacing": [2, "never"],
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "max-depth": [1, 3],
    "max-len": [1, 199],
    "max-statements": [1, 150],
    "keyword-spacing": [2, {"before": true, "after": true, "overrides": {}}]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  }
}
