{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "semi": [2, "always"],
    "jsx-quotes": [2, "prefer-single"],
    "indent": [0, 2],
    no-console: [1, { allow: ["warn", "error"] }]
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true
  }
}
